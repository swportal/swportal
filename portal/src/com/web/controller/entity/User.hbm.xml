<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.web.controller.entity">
	<class name="User" table="tsdr_user">
		<id name="id">
			<generator class="native"></generator>
		</id>
		<property name="name" />
		<property name="loginName" />
		<property name="password" />
		<property name="gender" />
		<property name="phoneNumber" />
		<property name="email" />
		<property name="description" />
		
		
		<!-- roles属性, 本类与Role的  多对多 -->
		<set name="roles" table="tsdr_user_role" lazy="false">
			<key column="userId"></key>
			<many-to-many class="Role" column="roleId"></many-to-many>
		</set> 
		<!-- projects属性, 本类与pas的 多对多 --><!-- Wuliying add 2017-02-23 -->
 		<set name="projects" table="tsdr_user_project" lazy="false"> 
 			<key column="userId"></key> 
 			<many-to-many class="Pas" column="projectId"></many-to-many> 
 		</set> 
		<!-- department属性, 本类与Department的  多对一 -->
		<!--<many-to-one name="department" class="Department" column="departmentId"></many-to-one> -->
	</class>
</hibernate-mapping>